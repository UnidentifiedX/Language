{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lc",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/lc/lc.csproj",
        "--",
        "${file}"
      ],
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern":{
          "regexp": "^(.*)\\((\\d,\\d\\,\\d\\,\\d\\))\\: (.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    }
  ]
}